<div class="container">
	<table class="table">
		<tr>
			<th>
				ID
			</th>
			<th>
				User Name
			</th>
			<th>
				User Title
			</th>
			<th>
				User Email
			</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
		<% _.each(users, function(user) { %>
			<tr>
				<td>
					<%= user.id %>	
				</td>
				<td>
					<%= user.name %>	
				</td>
				<td>
					<%= user.title %>	
				</td>
				<td>
					<%= user.email %>	
				</td>
				<td>
					<a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary">Show</a>
				</td>
				<td>
					<a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Edit</a>
				</td>
				<td>
					<form action="/user/destroy/<%= user.id %>">
						<input type="hidden" name="_method" value="delete">
						<input type="hidden" name="_csrf" value="<%= _csrf %>">
						<input type="submit" class="btn btn-sm btn-danger" value="Delete">
					</form>
				</td>
			</tr>
		<% }) %>
	</table>
</div>