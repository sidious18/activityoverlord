<% if (flash && flash.err) { %>
	<ul class="alert alert-success">
		<% Object.keys(flash.err).forEach(function(error) { %>
			<li>
				<%- JSON.stringify(flash.err[error]) %>
			</li>
		<% }) %>
	</ul>
<% } %>
<form action="/user/update/<%= user.id %>" method="POST" class="form-signin">
	<h3>Edit User</h3>
	<input type="text" value="<%= user.name %>" name="name" class="form-control" placeholder="Enter name">
	<input type="text" value="<%= user.title %>" name="title" class="form-control" placeholder="Enter title">
	<input type="text" value="<%= user.email %>" name="email" class="form-control" placeholder="Enter email">	
	<input type="hidden" name="_csrf" value="<%= _csrf %>">
	<input type="submit" class="btn btn-lg btn-primary btn-block" value="Submit changes">
</form>